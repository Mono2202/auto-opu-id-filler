{
  "manifest_version": 3,
  "name": "University ID Autofill",
  "version": "1.1",
  "description": "Autofills student ID and presses enter.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://sso.apps.openu.ac.il/login*"
      ],
      "js": [
        "autofill.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}